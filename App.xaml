<Application x:Class="WPF_PF10_Kuznetsov.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPF_PF10_Kuznetsov"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="ListBoxItem">
            <Setter Property="ItemsControl.FontFamily" Value="Times New Roman"/>
            <Setter Property="ItemsControl.FontSize" Value="14"/>
            <Setter Property="ItemsControl.FontWeight" Value="Bold"/>
            <Setter Property="ItemsControl.Background" Value="LightBlue"/>
            <Setter Property="ItemsControl.Foreground" Value="Black"/>
        </Style>
    </Application.Resources>
</Application>
